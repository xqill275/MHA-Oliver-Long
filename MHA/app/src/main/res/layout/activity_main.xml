<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RecordsBack"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Register button -->

    <!-- Decrypt button -->
    <Button
        android:id="@+id/RegisterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="32dp" />

    <!-- Encrypt button -->
    <Button
        android:id="@+id/DecryptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decrypt"
        app:layout_constraintStart_toEndOf="@+id/RegisterButton"
        tools:layout_editor_absoluteY="32dp" />

    <!-- Login button -->
    <Button
        android:id="@+id/EncryptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encrypt"
        app:layout_constraintStart_toEndOf="@+id/DecryptButton"
        tools:layout_editor_absoluteY="32dp" />

    <!-- Scrollable user list -->
    <Button
        android:id="@+id/LoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        app:layout_constraintStart_toEndOf="@+id/EncryptButton"
        tools:layout_editor_absoluteY="32dp" />

    <ScrollView
        android:id="@+id/UserScrollView"
        android:layout_width="411dp"
        android:layout_height="627dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/EncryptButton"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/UserListText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Loading users..."
            android:textSize="16sp" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
